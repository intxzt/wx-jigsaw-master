/* components/jigsaw/jigsaw.wxss */



.canvas_wrap {
  display: flex;
  justify-content: center;
}

.canvas {
  display: flex;
  position: absolute;
}

.ima_wrap {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.ima_wrap cover-image {
  width: 30px;
  height: 30px;
  margin: 5px;
}

.slider_wrap {
  margin-top: 10px;
  display: flex;
  justify-content: center;
}

.tip {
  display: inline-block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 42px;
}

.slider {
  height: 42px;
  width: 50px;
  background: #fff;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.slider image {
  width: 25px;
}
